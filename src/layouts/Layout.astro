---
import TheHeader from "../components/TheHeader.astro";
import TheContent from "../components/TheContent.astro";
import TheFooter from "../components/TheFooter.astro";

interface Props {
    title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content="Web developer with more than 8 years of professional experience." />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link href="https://fonts.googleapis.com/css2?family=Inter:wght@100;300;500;700;800;900&display=swap" rel="stylesheet"/>
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
    </head>
    <body>
        <div class="c-layout">
            <TheHeader />
            <TheContent>
                <slot />
            </TheContent>
            <TheFooter />
        </div>
    </body>
</html>

<style is:global lang="scss">
:root {
  --primary: #4B7BEC;
  --primary-light: #f8f9fd;
  --font: #29385f;
  --font-light: #757f99;
}

body,
html,
.c-layout {
    height: 100%;
    margin: 0;
    padding: 0;
}

body {
    font-family: "Inter", sans-serif;
    color: var(--font);
}

a {
    text-decoration: none;
}

ul,
li {
    padding: 0;
    margin: 0;
    list-style: none;
}

img {
    max-width: 100%;
    height: auto;
}

.container {
    width: 900px;
    max-width: 100%;
    margin: 0 auto;
}

.link {
    border-bottom: 2px solid #eaf0ff;
    color: var(--primary);
    transition: border-bottom-color .2s ease;

    &:hover {
        border-bottom-color: var(--primary);
    }
}

.c-layout {
    display: flex;
    flex-direction: column;
}
</style>
